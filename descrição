<body>

<div class="container">
  <h2>Gerador de Descrição</h2>
  <div class="form-group">
    <label for="codigo">Código:</label>
    <input type="text" id="codigo" placeholder="Insira o código">
  </div>
  <div class="form-group">
    <label for="motivo">Motivo:</label>
    <select id="motivo">
      <option value="Bloqueio">Bloqueio</option>
      <option value="Férias">Férias</option>
      <option value="Remarcação">Remarcação</option>
      <option value="Abono">Abono</option>
    </select>
  </div>
  <div class="form-group">
    <label for="profissional">Profissional + CPF:</label>
    <input type="text" id="profissional" placeholder="Nome do profissional e CPF">
  </div>
  <div class="form-group">
    <label for="periodo">Período:</label>
    <input type="text" id="periodo" placeholder="Ex: 10/07/2024 a 20/07/2024">
  </div>
  <button onclick="copiarDescricao()">Copiar Descrição</button>
</div>

<script>
function copiarDescricao() {
  const codigo = document.getElementById('codigo').value;
  const motivo = document.getElementById('motivo').value;
  const profissional = document.getElementById('profissional').value;
  const periodo = document.getElementById('periodo').value;

  const descricao = `Codigo: ${codigo}\nMotivo: ${motivo}\nProfissional: ${profissional}\nPeríodo: ${periodo}`;

  navigator.clipboard.writeText(descricao).then(() => {
    alert('Descrição copiada para a área de transferência!');
  }).catch(err => {
    console.error('Erro ao copiar texto: ', err);
    alert('Erro ao copiar a descrição.');
  });
}
</script>

